<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:src="@drawable/ic_book" />

        <TextView
            android:maxLines="2"
            android:layout_toStartOf="@+id/imgMore"
            android:id="@+id/tvNameBook"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/imgBook"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Học để làm giàu \n(320 Trang)"
            android:textColor="#FF5722"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:src="@drawable/ic_more" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameBook"
            android:layout_toEndOf="@+id/imgBook"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:text="Bắt Trẻ Đồng Xanh (Tái Bản) là một cuốn sách nhỏ, mỏng và chẳng giống ai. Điều đó cũng là tính cách của nhân vật chính, Holden - nổi loạn, thiếu giáo dục, và lạ lùng."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tvDescription"
            android:layout_toEndOf="@+id/imgBook"
            android:paddingStart="10dp"
            android:text="30000 đ"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>